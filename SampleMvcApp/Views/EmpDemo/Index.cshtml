@model List<SampleMvcApp.Models.tblEmployee>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        div.menu{
            border: 2px solid blue;
            background-color:goldenrod;
            margin:10px;
            padding: 5px;
            text-align: center;
        }
        a.menu{
            display: inline-block;
            padding: 2px;
            margin:2px;
            background-color: yellow;
            color:indianred;
            width: 140px;
            height:20px;
        }
        a:hover {
            background-color: red;
            color: yellow;
        }
    </style>
</head>
<body>
    <h1>Welcome to Employee Monitoring System</h1>
    <div class="menu">
        @Html.ActionLink("New Entry", "AddNew")
    </div>
    <hr />
    <div>
        <h2>List of Employees</h2>
        <table border="1">
            <tr>
                <th>Employee ID</th>
                <th>Employee Name</th>
                <th>Options</th>
            </tr>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.EmpID</td>
                    <td>@emp.EmpName</td>
                    <td>
                        @Html.ActionLink("Details", "Search", new { id = emp.EmpID })
                        @Html.ActionLink("Delete", "MyDelete", new { id = emp.EmpID })
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
